{
  "name": "cozytab",
  "private": true,
  "packageManager": "bun@1.1.32",
  "workspaces": [
    ".",
    "presence-worker"
  ],
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "web": "bunx vite",
    "convex": "bunx convex dev",
    "convex:deploy": "bunx convex deploy",
    "worker": "bun run --filter presence-worker dev",
    "worker:deploy": "bun run --filter presence-worker deploy",
    "all": "bunx concurrently \"bun run web\" \"bun run convex\" \"bun run worker\"",
    "test": "bun test ./tests ./src",
    "build": "bunx tsc -b && bunx vite build",
    "lint": "bunx eslint .",
    "preview": "bunx vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.57.0",
    "@convex-dev/stripe": "^0.1.1",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.17",
    "@types/suncalc": "^1.9.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.30.0",
    "jotai": "^2.15.2",
    "lucide-react": "^0.555.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router-dom": "^7.10.0",
    "suncalc": "^1.9.0",
    "tailwind-merge": "^3.4.0",
    "wrangler": "4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.1.0",
    "convex-test": "^0.0.41",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "@types/bun": "latest"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
